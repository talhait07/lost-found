<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location of lost</th>
      <th>Lon</th>
      <th>Lat</th>
      <th>Date of lost</th>
      <th>Last condition</th>
      <th>Color</th>
      <th>Published</th>
      <th>Author comments</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.description %></td>
        <td><%= post.location_of_lost %></td>
        <td><%= post.lon %></td>
        <td><%= post.lat %></td>
        <td><%= post.date_of_lost %></td>
        <td><%= post.last_condition %></td>
        <td><%= post.color %></td>
        <td><%= post.published %></td>
        <td><%= post.author_comments %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
